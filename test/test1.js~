
var canvas = document.getElementById( "graphout" );
var ctx= canvas.getContext( "2d" );

var values = [];
for( var n = 0; n < 1024; n++ )  {
	var newCol;
	values.push( newCol=[] );
	for( var m = 0; m < 1024; m++ )  {
		newCol.push( 0 );
        }
        
}


var RNG = SaltyRNG();


var tick, newtick;

tick = Date.now();


function tick() {

	while( ( newtick = Date.now() ) - tick < 50 ) {
		for( var n = 0; n < 100000; n++ ) {
			var x = RNG.getBits( 10 );
			var y = RNG.getBits( 10 );
        		values[x][y]++;
		}
	}


	var myImageData = ctxMatrix.getImageData(0, 0, canvas.width, canvas.height)
	var data = myImageData.data;

	for( var n = 0; n < 1024; n++ ) {
		for( var m = 0; m < 1024; m++ ) {
        		data[(n*1024+m)*4 + 0] = values[n][m];
        		data[(n*1024+m)*4 + 1] = values[n][m];
        		data[(n*1024+m)*4 + 2] = values[n][m];
        		data[(n*1024+m)*4 + 3] = 255;
                }
        }

	ctx.putImageData(myImageData, 0, 0);
}
